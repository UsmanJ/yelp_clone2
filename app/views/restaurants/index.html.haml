%head
  %meta(charset="UTF-8")
%body
  - if @restaurants.any?
    - @restaurants.each do |restaurant|
      = link_to restaurant.name, restaurant_path(restaurant)
      = link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)
      - if current_user == restaurant.user
        = link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant)
        = link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete
      %h3
        Review for
        = restaurant.name
        %h3 Average rating:
        = star_rating(restaurant.average_rating)

      - if restaurant.reviews.any?
        %ul
          - restaurant.reviews.each do |review|
            %li
              = review.thoughts
              = star_rating(review.rating)
              %p= pluralize review.endorsements.count, 'endorsement'
              = link_to "Endorse Review", new_review_endorsement_path(restaurant)
      - else
        %p No reviews
  - else
    %h1 No restaurants yet!

  %a(href='/restaurants/new') Add a restaurant
